<h1>New Household</h1>
<form method="post" action="/households">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div>
    <label>Name </label>
    <input type="text" name="household[name]">
  </div>
  <div>
    <label>Location </label>
    <input type="text" name="household[location]">
  </div>
  <div>
    <input type="submit" value="Create household">
  </div>
</form>